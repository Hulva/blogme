<body class="gray-bg">
<div class="wrapper wrapper-content">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox float-e-margins">

                <div class="ibox-content">

                    <h2>相册</h2>
                    <div class="lightBoxGallery">
                        <% gallery.forEach(function (galleyItem, index) { %>
                        <a href="/images/upload/<%= galleyItem %>" title="<%= galleyItem.split(".")[0] %>" data-gallery=""><img
                                    src="/images/upload/<%= galleyItem %>"></a>
                        <% }) %>
                        <div id="blueimp-gallery" class="blueimp-gallery">
                            <div class="slides"></div>
                            <h3 class="title"></h3>
                            <a class="prev">‹</a>
                            <a class="next">›</a>
                            <a class="close">×</a>
                            <a class="play-pause"></a>
                            <ol class="indicator"></ol>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<script src="/js/jquery.min.js"></script>
